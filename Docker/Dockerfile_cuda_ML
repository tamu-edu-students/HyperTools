    scikit-learn \
    pyopencl \
    scipy \
    opencv-python \
    numpy \
    matplotlib \
    torch \
    torchvision \
    kornia

RUN python3.9 -m pip install \
    pycocotools \
    onnx \
    onnxruntime \
    tqdm \
    pandas \
    scikit-learn \
    pyopencl \
    scipy \
    opencv-python \
    numpy \
    matplotlib \
    torch \
    torchvision \
    kornia

WORKDIR /home

RUN cd /home &&\
    bash

